    <link rel="stylesheet" href="../../stylesheets/style.css">
    <title>Last Bench | New Comment</title>
  </head>
  <body>


<%- include('../partials/nav') %>
<a href="/dashboard"><img class="logo" src="../../img/logo.jpg" alt="Logo"></a>

<div id="main">
    <div class="container">
    <span class="back"><a href="/dashboard/<%= user._id %>"><i class="fa fa-arrow-left"></i> Go back</a></span>
    <div class="text-center">
        <h1>Add new comment to <%= post.title %></h1>
    </div>
    <div class="text-center">
        <form action="/dashboard/<%= user._id %>/<%= post._id %>" method="POST">
            <input class="form-field" type="text" name="text" placeholder="Enter the comment..">
            <button type="submit" class="button register">Submit</button>
        </form>
    </div>
    </div>
</div>

<%-  include('../partials/footer') %>
<script src="../../js/core.js"></script>  
</body>
</html>