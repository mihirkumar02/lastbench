<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../../stylesheets/style.css">
    <title>Last Bench | My Profile</title>
  </head>
  <body>


<%- include('../partials/nav') %>
<a href="/dashboard"><img class="logo" src="../../img/logo.jpg" alt="Logo"></a>

<div id="main">
<div class="container">
    <span class="back"><a href="/dashboard/<%= user._id %>"><i class="fa fa-arrow-left"></i> Go back</a></span>
    
    <div class="text-center">
        <h1 class="mt-4">My Posts</h1>
    </div>
    <hr>
    <div class="row">
    <% posts.forEach(function(post){ %>
        <% if(post.author.id.equals(user._id)){ %>
        <div class="col-md-4 text-center">
            <h3><%= post.title %></h3>
            <% if(post.image.length>0) { %>
                <img class="mypostpic" src="/dashboard/<%= post.image %>" alt="<%= post.title %>">
            <% } %>
                <h5><%= post.description %></h5>      
        <a href="/dashboard/<%= user._id %>/<%= post._id %>/edit">Edit</a>
        <form action="/dashboard/<%= user._id %>/<%= post._id %>?_method=DELETE" method="POST">
            <button>Delete</button>
        </form>
        </div>  
        <% } %>
    <%  }); %>
    </div>
</div>
</div>

<%-  include('../partials/footer') %>
<script src="../../js/core.js"></script>  
</body>
</html>