<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/png" href="../../img/favicon.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../../stylesheets/style.css">
    <title>Last Bench | All Friends</title>
  </head>
  <body>


<%- include('../partials/nav') %>
<a href="/dashboard"><img class="logo" src="../../img/logo.jpg" alt="Logo"></a>

<div id="main">
    <div class="container">
        <div class="text-center">
            <h1>Friends Section</h1>
        </div>
        <hr>

        <div class="row">
            <div class="col-md-6 text-center">
                <h2>My Friends</h2>
                <hr>
                <% friends.forEach(function(friend){ %>
                    <div>
                        <img class="profilepic" src="/upload/<%= friend.userImage %>" alt="Profile Pic">
                        <h2><b class="capital"><%= friend.sender.fname %>&nbsp;<%= friend.sender.lname %></b></h2>
                        <h4><%= friend.sender.email %></h4>
                        <h4><%= friend.sender.website %></h4>
                        <h4><%= friend.sender.interests %></h4>
                        <h4><%= friend.sender.about %></h4>
                        <h4><%= friend.sender.city %></h4>
                        <h4><%= friend.sender.country %></h4>
                    </div>
                <% }) %>        
            </div>
            <div class="col-md-6 text-center">
                <h2>Requests</h2>
                <hr>
                <% requests.forEach(function(request){ %>
                    <div>
                        <img class="profilepic" src="/upload/<%= request.userImage %>" alt="Profile Pic">
                        <h2><b class="capital"><%= request.sender.fname %>&nbsp;<%= request.sender.lname %></b></h2>
                        <h2><%= request.sender.website %></h4>
                        <h2><%= request.sender.city %></h4>
                        <h2><%= request.sender.country %></h4>
                        <form action="/friends/<%= user._id %>/accept/<%= request._id %>" method="POST">
                            <button class="button register">Accept</button>
                        </form>
                    </div>
                <% }) %>
            </div>
        </div>
        <div class="text-center">
            <a class="button login" href="/friends/<%= user._id %>/new">Add a Friend</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
<script src="../../js/core.js"></script>  
</body>
</html>