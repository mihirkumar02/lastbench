<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../stylesheets/style.css">
    <title>Last Bench | My Profile</title>
  </head>
  <body>


<%- include('partials/nav') %>

<div id="main">
    <div class="container">
        <span class="back"><a href="/dashboard/<%= user._id %>"><i class="fa fa-arrow-left"></i> Go back</a></span>
        <h2><%= user.fname %>'s Profile</h2>
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <%- include('./partials/messages') %>
                <img class="profilepic" src="/upload/<%= user.userImage %>" alt="Profile Picture">
                <form action="/profile/<%= user._id %>" method="POST" enctype="multipart/form-data">
                    <span>Select profile picture</span>
                    <input type="file" name="uploadImage">
                    <button>Upload</button>
                </form>
                
                <div>
                    <h4><%= user.regno %></h4>
                    <h3><%= user.about %></h3>
                    <h3><%= user.city %>, <%= user.country %></h3>
                    <h5>My hobbies are <%= user.interests %></h5>
                    <h4>Contact me @</h4>
                    <p><%= user.contact %></p>
                    <p><%= user.website %></p>
                </div>
                <a href="/profile/<%= user._id %>/edit">Edit profile</a>
            </div>
            <div class="col-md-6 col-sm-12">
                <h3>Edit Account details</h3>
                <form action="/users/edit/<%= user._id %>?_method=PUT" method="POST">
                    <input type="password" name="currentpassword" placeholder="Enter current password..">
                    <input type="email" name="email" placeholder="New email..">
                    <input type="password" name="password" placeholder="Enter new password..">
                    <button>Update</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%-  include('partials/footer') %>